{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "esnext",
        "isolatedModules": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "strict": true,
        "noImplicitOverride": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
          "~*": ["./*"]
        },
        "rootDirs": [
            ".",
            "./tsm"
        ]
    },
    "include": [
        "./src/**/*",
        "./jest.config.ts",
        "./jest.setup.ts"
    ]
}
