{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "module": "es6",
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "sourceMap": true,
        "strict": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
            "assets/*": ["./assets/*"]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*"
    ]
}
