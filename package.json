{
  "name": "jaxreiff-site",
  "version": "1.0.0",
  "description": "Portfolio site for Jax Reiff.",
  "main": "dist/index.html",
  "scripts": {
    "start": "parcel src/index.html",
    "build": "parcel build src/index.html",
    "test": "tsc --noEmit && jest",
    "cname": "cp CNAME dist/",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "alias": {
    "src": "./src",
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^react$": "preact/compat",
      "^react-dom/test-utils$": "preact/test-utils",
      "^react-dom$": "preact/compat"
    },
    "preset": "ts-jest",
    "setupFiles": [
      "./tst/setup.ts"
    ],
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaxreiff/jaxreiff.github.io.git"
  },
  "author": "Jax Reiff <jaxreiff@me.com> (https://jaxreiff.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaxreiff/jaxreiff.github.io/issues"
  },
  "homepage": "https://jaxreiff.com/",
  "dependencies": {
    "@types/enzyme": "^3.10.5",
    "@types/jsdom": "^16.2.3",
    "preact": "^10.4.4",
    "preact-router": "^3.2.1",
    "typescript": "^3.9.3"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "gh-pages": "^3.1.0",
    "jest": "^26.0.1",
    "parcel-bundler": "^1.12.4",
    "ts-jest": "^26.0.0"
  }
}
